{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": ["ts/src/**", "ts/test/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off"
			},
			"style": {
				"noDefaultExport": "error"
			}
		}
	}
}
